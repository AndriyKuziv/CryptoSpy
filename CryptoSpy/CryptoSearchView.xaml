<UserControl x:Class="CryptoSpy.CryptoSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoSpy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox FontSize="18" Padding="3 0 3 0" VerticalContentAlignment="Center" MinWidth="100" MaxWidth="300"/>
            <ComboBox MaxWidth="50" MaxHeight="20" Margin="10 0 10 0" MinWidth="80" FontSize="18"/>
            <Button Content="Search" Padding="7 0 7 0" FontSize="18"/>
        </StackPanel>
    </Grid>
</UserControl>
